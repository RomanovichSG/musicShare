{% extends "::base.html.twig" %}
{% block stylesheets %}
    #login{
        margin: auto;
    }
{% endblock %}
{% block title %}Login{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ path('login') }}" method="post">
        <div class="input-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Name" />
                <br>
            </div>
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock" ></i></span>
                <input type="password" id="password" name="_password" class="form-control" placeholder="Password" />
            <br>
            </div>
        </div>
        <button type="submit" class="btn btn-default">Login</button>
        <input type='button' class="btn-link" value='Registration' onClick='location.href="{{ path("registration") }}"'>
    </form>
{% endblock %}
